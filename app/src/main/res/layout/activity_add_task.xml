<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FB">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_toolbar_gradient"
        android:elevation="6dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarAddTask"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Add Task"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="@drawable/back_arrow"
            app:navigationIconTint="@android:color/white"/>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardAddTaskForm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Task Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Task Title"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="17sp"/>

                    <EditText
                        android:id="@+id/etTaskTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:hint="e.g. Study DSA"
                        android:background="@drawable/bg_input"
                        android:padding="12dp"
                        android:layout_marginTop="6dp"/>

                    <!-- Description -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description (optional)"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="12dp"/>

                    <EditText
                        android:id="@+id/etTaskDesc"
                        android:layout_width="match_parent"
                        android:textColor="@color/grey"
                        android:layout_height="100dp"
                        android:gravity="top"
                        android:hint="Add some notes..."
                        android:background="@drawable/bg_input"
                        android:padding="12dp"
                        android:layout_marginTop="6dp"/>

                    <!-- Start Date -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Date"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:layout_marginTop="12dp"/>

                    <LinearLayout
                        android:id="@+id/layoutStartDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_input"
                        android:padding="12dp"
                        android:layout_marginTop="6dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/txtStartDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Select start date"
                            android:textColor="#666"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/calendar"/>
                    </LinearLayout>

                    <!-- End Date -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Date"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:layout_marginTop="12dp"/>

                    <LinearLayout
                        android:id="@+id/layoutEndDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_input"
                        android:padding="12dp"
                        android:layout_marginTop="6dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/txtEndDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Select end date"
                            android:textColor="#666"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/calendar"/>
                    </LinearLayout>
                    <!-- Priority -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Priority"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:layout_marginTop="12dp"/>

                    <RadioGroup
                        android:id="@+id/rgPriority"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp">

                        <RadioButton
                            android:id="@+id/rbLow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="Low"/>

                        <RadioButton
                            android:id="@+id/rbMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="Medium"
                            android:layout_marginStart="16dp"/>

                        <RadioButton
                            android:id="@+id/rbHigh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="High"
                            android:layout_marginStart="16dp"/>
                    </RadioGroup>

                    <!-- Save Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSaveTask"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Save Task"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        app:cornerRadius="14dp"
                        android:backgroundTint="@color/primaryColor"
                        android:textColor="@android:color/white"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>